{
    "compilerOptions": {
      "isolatedModules": true,
      "types": ["jest", "node"],
      "module": "CommonJS",
      "target": "ES6",
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true,
      "jsx": "react"
    },
    "include": [
      "src/**/*.ts",
      "db/config.ts",
      "**/*.test.ts", 
      "**/*.spec.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }